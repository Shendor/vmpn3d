<Grid x:Class="PNCreator.Modules.Main.PNObjectProperties.TransformationProperties.PositionPropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:numericBox="clr-namespace:NumericBox;assembly=NumericBox">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="72"></ColumnDefinition>
        <ColumnDefinition Width="110"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>

    <TextBlock Text="X" Grid.Row="0"  />
    <TextBlock Text="Y" Grid.Row="1" />
    <TextBlock Text="Z" Grid.Row="2" />

    <numericBox:NumericBox Name="moveXNB" Grid.Column="1" Grid.Row="0" Margin="3" 
                            Increment="0.5" ValueChanged="NumericBoxValueChanged"/>
    <numericBox:NumericBox Name="moveYNB" Grid.Column="1" Grid.Row="1" Margin="3"
                           Increment="0.5" ValueChanged="NumericBoxValueChanged"/>
    <numericBox:NumericBox Name="moveZNB" Grid.Column="1" Grid.Row="2" Margin="3"
                          Increment="0.5" ValueChanged="NumericBoxValueChanged"/>
</Grid>
