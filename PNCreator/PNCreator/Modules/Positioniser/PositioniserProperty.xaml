<Grid x:Class="PNCreator.Modules.Positioniser.PositioniserProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PNCreator.Modules.Positioniser"
            Background="Transparent" >
    <Border Grid.RowSpan="11" Grid.ColumnSpan="3" Style="{StaticResource OptionBorder}" Background="Transparent" Opacity="1" />
    <Border Grid.RowSpan="11" Grid.ColumnSpan="3" Style="{StaticResource OptionBorder}" />

    <StackPanel>
        <Expander Header="Size" Margin="5,1,5,5" >
            <local:PositioniserSizePropertyPanel x:Name="sizePropertyPanel" />
        </Expander>

        <Expander Header="Position" Margin="5,1,5,5" >
            <local:PositioniserTranslationPropertyPanel x:Name="translationPropertyPanel" />
        </Expander>

        <Expander Header="Visual" Margin="5,1,5,5" >
            <local:PositioniserVisualPropertyPanel x:Name="visualPropertyPanel" />
        </Expander>
    </StackPanel>
</Grid>
