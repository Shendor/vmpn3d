                          HorizontalAlignment="Right" VerticalScrollBarVisibility="Auto" Width="0" >
                <Grid>
                    <Border Grid.RowSpan="11" Grid.ColumnSpan="3" Style="{StaticResource leftBorder}" Background="Transparent" Opacity="1" />
                    <Border Grid.RowSpan="11" Grid.ColumnSpan="3" Style="{StaticResource leftBorder}" />
                    <StackPanel>
                        <!-- ******************* Membrane options *****************************-->
                        <Expander x:Name="membraneOptions" Header="Membrane" Padding="2" Visibility="Collapsed" Background="White" Margin="5" BorderBrush="Black" BorderThickness="1">
                            <Grid HorizontalAlignment="Stretch" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Grid.Column="0" Text="  Name"  Margin="0,8,0,0" />
                                    <TextBlock Grid.Column="0" Text="  Group" Margin="0,11,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="membraneNameTB" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,0" PreviewTextInput="options_TextInput"  />
                                    <TextBox x:Name="membraneGroupTB" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,5" PreviewTextInput="options_TextInput" />
                                </StackPanel>
                                <Button x:Name="coverBtn" Grid.Column="2" Content=" C " Margin="0,3,4,5" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Click="MembraneButton_Click" Style="{StaticResource OtherButtonStyle}" >
                                    <Button.ToolTip>
                                        <ToolTip Content="Cover all objects which are inside of this membrane" />
                                    </Button.ToolTip>
                                </Button>
                            </Grid>
                        </Expander>
                        <!-- ******************* Structural Membrane options *****************************-->
                        <Expander x:Name="sMembraneOptions" Header="Structural membrane" Padding="2" Visibility="Collapsed" Background="White" Margin="5" BorderBrush="Black" BorderThickness="1">
                            <Grid HorizontalAlignment="Stretch" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Grid.Column="0" Text="  Name"  Margin="0,8,0,0" />
                                    <TextBlock Grid.Column="0" Text="  Group" Margin="0,11,0,0" />
                                    <TextBlock Grid.Column="0" Text="  Size" Margin="0,11,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBox x:Name="sMembraneNameTB" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,0" PreviewTextInput="options_TextInput"  />
                                    <TextBox x:Name="sMembraneGroupTB" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,0" PreviewTextInput="options_TextInput" />
                                    <TextBox x:Name="sMembraneSizeTB" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,5" PreviewTextInput="options_TextInput" />
