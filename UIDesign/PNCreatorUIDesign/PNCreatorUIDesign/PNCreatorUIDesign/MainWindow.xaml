<Window x:Class="PNCreatorUIDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"
         xmlns:numericBox="clr-namespace:NumericBox;assembly=NumericBox"
        xmlns:aero="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        Title="MainWindow" Height="611" Width="1056" Style="{StaticResource WindowStyle}">
    <Window.CommandBindings>
        <CommandBinding x:Name="closeCommand" Command="{x:Static shell:SystemCommands.CloseWindowCommand}" Executed="OnWindowClose"/>
        <CommandBinding x:Name="maximizeCommand" Command="{x:Static shell:SystemCommands.MaximizeWindowCommand}" Executed="OnWindowMaximize"/>
        <CommandBinding x:Name="minimizeCommand" Command="{x:Static shell:SystemCommands.MinimizeWindowCommand}" Executed="OnWindowMinimize"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="menuRow" Height="26" />
            <RowDefinition x:Name="toolBarRow" Height="55" />
            <RowDefinition />
            <RowDefinition x:Name="statusBarRow" Height="25" />
        </Grid.RowDefinitions>

        <!-- ============================================ MENU ============================================-->
        <Border Grid.Row="0" Margin="5,2,5,0" Style="{StaticResource defaultBorder}" />
        <Menu Grid.Row="0" Background="Transparent" Margin="15,2,15,0" Foreground="#FF3F3F3F">
            <!--*************************************************************************-->
            <MenuItem Header="File" Background="Transparent">
                <MenuItem x:Name="f1" Header="New model" Click="MenuItems_Click" >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/document.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="f2" Header="Open" Click="MenuItems_Click" >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="f5" Header="Open recent"  >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Open.png" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="f51" Header="" Click="MenuItems_Click" Visibility="Collapsed"/>
                    <MenuItem x:Name="f52" Header="" Click="MenuItems_Click" Visibility="Collapsed"/>
                    <MenuItem x:Name="f53" Header="" Click="MenuItems_Click" Visibility="Collapsed"/>
                    <MenuItem x:Name="f54" Header="" Click="MenuItems_Click" Visibility="Collapsed"/>
                    <MenuItem x:Name="f55" Header="" Click="MenuItems_Click" Visibility="Collapsed"/>
                </MenuItem>
                <MenuItem x:Name="f3" Header="Save" Click="MenuItems_Click" >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="f4" Header="Exit" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Exit.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <!--*************************************************************************-->
            <MenuItem Header="Edit">
                <MenuItem x:Name="p1" Header="Delete" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Refresh.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="p2" Header="Find object" Click="MenuItems_Click">
                    <MenuItem.Triggers>
                        <EventTrigger SourceName="p2" RoutedEvent="MenuItem.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="searchingPanel" Storyboard.TargetProperty="Height" From="0" To="42" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </MenuItem.Triggers>
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Find.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="p3" Header="Model configuration" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Settings.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <!--*************************************************************************-->
            <MenuItem Header="View">
                <MenuItem x:Name="v11" Header="Wire" IsEnabled="False" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Refresh.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="v6" Header="Properties" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Settings.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="v7" Header="2D Map" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Refresh.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Camera">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/View.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="View" Click="MenuItems_Click">
                        <MenuItem x:Name="v1" Header="Perspective" />
                        <MenuItem x:Name="v2" Header="Top" />
                        <MenuItem x:Name="v3" Header="Left" />
                        <MenuItem x:Name="v4" Header="Front" />
                    </MenuItem>
                    <MenuItem x:Name="v5" Header="Properties" Click="MenuItems_Click"/>
                </MenuItem>
                <MenuItem Header="Window" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Find.png" />
                    </MenuItem.Icon>
                    <MenuItem x:Name="v8" Header="Menu" />
                    <MenuItem x:Name="v9" Header="Toolbar"/>
                    <MenuItem x:Name="v10" Header="Status bar" />
                </MenuItem>
            </MenuItem>
            <!--*************************************************************************-->
            <MenuItem Header="Analize">
                <MenuItem x:Name="a1" Header="Diagrammes" Click="MenuItems_Click" >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Chart.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="a2" Header="Charts" Click="MenuItems_Click" >
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Chart.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <!--*************************************************************************-->
            <MenuItem Header="Objects">
                <MenuItem Header="Discrete PN">
                    <MenuItem x:Name="o1" Header="Location" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Location.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o2" Header="Transition" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Transition.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o3" Header="Membrane" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Membrane.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem x:Name="o4" Header="Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Arc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o5" Header="Inhibitor Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/InghibitorArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o6" Header="Test Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/TestArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Continuous PN">
                    <MenuItem x:Name="o7" Header="Location" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CLocation.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o8" Header="Transition" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CTransition.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o9" Header="Flow Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CFlowArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem x:Name="o10" Header="Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o11" Header="Inhibitor Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CInghibitorArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="o12" Header="Text Arc" Click="MenuItems_Click">
                        <MenuItem.Icon>
                            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/CTestArc.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem x:Name="o13" Header="Select" Click="MenuItems_Click">
                    <MenuItem.Icon>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Source="/Resources;component/Content/Images/Select.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <!--*************************************************************************-->
            <MenuItem Header="Reference">
                <MenuItem x:Name="s1" Header="Help" Click="MenuItems_Click" />
                <MenuItem x:Name="s2" Header="About" Click="MenuItems_Click" />
            </MenuItem>
            <!--*************************************************************************-->
        </Menu>

        <!-- ============================================ TOOLBAR ============================================-->
        <Grid Grid.Row="1" Margin="5,5,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="360" />
                <ColumnDefinition Width="310" />
                <ColumnDefinition Width="356*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource defaultBorder}" />
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,3,5,3" UseLayoutRounding="True">
                <Button x:Name="newBtn" ToolTipService.InitialShowDelay="0" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                    <Button.ToolTip>
                        <ToolTip Content="Start new model" />
                    </Button.ToolTip>
                    <Image Source="/Resources;component/Content/Images/document.png"></Image>
                </Button>
                <Button x:Name="openBtn" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                    <Button.ToolTip>
                        <ToolTip Content="Open model" />
                    </Button.ToolTip>
                    <Image Source="/Resources;component/Content/Images/Open.png" ></Image>
                </Button>
                <Button x:Name="saveBtn" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="toolBarButtons_Click"  Style="{StaticResource DefaultButtonStyle}">
                    <Button.ToolTip>
                        <ToolTip Content="Save model" />
                    </Button.ToolTip>
                    <Image Source="/Resources;component/Content/Images/Save.png"></Image>
                </Button>

                <Button x:Name="showAnimPanelBtn" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                    <Button.ToolTip>
                        <ToolTip Content="Start simulation" />
                    </Button.ToolTip>
                    <Button.Triggers>
                        <EventTrigger SourceName="showAnimPanelBtn" RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="animationPanel"
                                    Storyboard.TargetProperty="Height" From="0" To="175" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/Animation.png" />
                </Button>

                <RadioButton x:Name="selectBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Select object" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/select.png"></Image>
                </RadioButton>
            </StackPanel>

            <!-- Discrete PN objects -->
            <Border Grid.Column="1" Margin="5,0,0,0" Style="{StaticResource defaultBorder}" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,3,5,3" >
                <RadioButton x:Name="locationBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0"  Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Discrete Location" />
                    </RadioButton.ToolTip>
                    <Image Source="/Resources;component/Content/Images/location.png"></Image>
                </RadioButton>
                <RadioButton x:Name="transitionBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Discrete Transition" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/Transition.png"></Image>
                </RadioButton>
                <RadioButton x:Name="membraneBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Membrane" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/Membrane.png"></Image>
                </RadioButton>
                <RadioButton x:Name="structureMembraneBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Structural Membrane" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/SMembrane.png"></Image>
                </RadioButton>
                <RadioButton x:Name="arcBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Discrete Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/arc.png"></Image>
                </RadioButton>
                <RadioButton x:Name="inghibitorBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Discrete Inhibitor Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/InghibitorArc.png"></Image>
                </RadioButton>
                <RadioButton x:Name="testBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Discrete Test Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/TestArc.png"></Image>
                </RadioButton>
            </StackPanel>

            <!-- Continuous PN objects -->
            <Border Grid.Column="2" Margin="5,0,0,0" Style="{StaticResource defaultBorder}"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,3,5,3">
                <RadioButton x:Name="cLocationBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Location" />
                    </RadioButton.ToolTip>
                    <Image Source="/Resources;component/Content/Images/clocation.png" />
                </RadioButton>
                <RadioButton x:Name="cTransitionBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Transition" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/cTransition.png"></Image>
                </RadioButton>
                <RadioButton x:Name="flowArcBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Flow Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/CFlowArc.png"></Image>
                </RadioButton>

                <RadioButton x:Name="cArcBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click" >
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/carc.png"></Image>
                </RadioButton>
                <RadioButton x:Name="cInghibitorBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Inhibitor" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/cInghibitorArc.png"></Image>
                </RadioButton>
                <RadioButton x:Name="cTestBtn" GroupName="pnObjectsGroup" ToolTipService.InitialShowDelay="0" Margin="5,0,0,0" Click="RadioButtons_Click">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Continuous Test Arc" />
                    </RadioButton.ToolTip>
                    <Image Grid.Column="0" Source="/Resources;component/Content/Images/cTestArc.png"></Image>
                </RadioButton>
            </StackPanel>

            <Border Grid.Column="3" Margin="5,0,0,0" Style="{StaticResource defaultBorder}" />
        </Grid>

        <!--============================================================= EDIT WINDOW ===============================================================-->
        <Grid  x:Name="grid1" Grid.Row="2" Margin="5,5,5,0" Focusable="True" MouseMove="Grid_MouseMove" MouseWheel="grid1_MouseWheel"
               MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseLeftButtonUp="grid1_MouseLeftButtonUp" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="440" />
                <ColumnDefinition Width="238*" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="26" />
            </Grid.ColumnDefinitions>
            <Border x:Name="border" Grid.ColumnSpan="4" Style="{StaticResource defaultBorder}" />

            <!--============================================================= VIEWPORT3D ===============================================================-->
            <Viewport3D x:Name="viewport" Grid.Row="2" Grid.ColumnSpan="4"  MouseLeftButtonDown="viewport_MouseLeftButtonDown" >
                <!--*************************************************************************-->
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="camera" FarPlaneDistance="8000" LookDirection="-1,-1,-640" UpDirection="0,1,0" NearPlaneDistance="0.1" Position="1,1,1200" FieldOfView="50" >
                        <PerspectiveCamera.Transform>
                            <Transform3DGroup>
                                <TranslateTransform3D OffsetX="0" OffsetY="0" OffsetZ="-600" />
                                <ScaleTransform3D ScaleX="0.0055" ScaleY="0.0055" ScaleZ="0.0055" />
                                <TranslateTransform3D OffsetX="0" OffsetY="0" OffsetZ="-600" />
                            </Transform3DGroup>
                        </PerspectiveCamera.Transform>
                    </PerspectiveCamera>
                </Viewport3D.Camera>

                <!--*************************************************************************-->
                <ModelVisual3D x:Name="light">
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <Model3DGroup.Children>
                                <AmbientLight Color="#333333" />
                                <DirectionalLight Color="#FFFFFF" Direction="-0.6,-0.5,-0.6"  />
                            </Model3DGroup.Children>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!--*************************************************************************-->

            </Viewport3D>
            <Canvas Name="mainViewportCanvas" Grid.Row="2" ClipToBounds="True" IsHitTestVisible="False"  Grid.Column="0" Grid.ColumnSpan="4"></Canvas>

            <!-- ============================================ SIMULATION PANEL  ============================================-->
            <Grid x:Name="animationPanel" Grid.Column="0" VerticalAlignment="Top" Height="0" Visibility="Hidden">
                <Grid Margin="15,1,15,5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition />
                        <RowDefinition Height="50"/>

                    </Grid.RowDefinitions>
                    <Border Grid.RowSpan="2" Style="{StaticResource upperTransparentBorder}" />
                    <Border Grid.RowSpan="2" Style="{StaticResource upperSemiTransparentBorder}" />
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource upperWhiteBorder}" Width="140"  Margin="10,0,0,0"  />

                    <ComboBox x:Name="simulationTypes" SelectedIndex="0" Grid.Row="0" Margin="20,10,10,5" Width="120" SelectionChanged="ComboBoxes_SelectionChanged">
                        <ComboBox.Triggers>
                            <EventTrigger SourceName="simulationTypes" RoutedEvent="ComboBox.SelectionChanged">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="uiForAnimation"
                                             Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8" />
                                        <DoubleAnimation Storyboard.TargetName="uiForNoAnimation"
                                             Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ComboBox.Triggers>
                        <ComboBoxItem Content="With animation" />
                        <ComboBoxItem Content="Without animation" />
                    </ComboBox>

                    <Border x:Name="simulationContentBorder" Grid.Column="0" Margin="20,15,20,1" Grid.Row="1" Height="55" Style="{StaticResource lowerWhiteBorder}" />
                    <StackPanel x:Name="uiForAnimation" Grid.Row="1" Margin="30,20,30,5" VerticalAlignment="Bottom" >
                        <TextBlock Text="Animation speed: " />
                        <Slider x:Name="timeSpeedSlider" Margin="0,5,0,0" Value="2.15" Minimum="0.300" Maximum="12" ValueChanged="Sliders_ValueChanged">
                            <Slider.ToolTip>
                                <TextBlock Text="Animation speed" />
                            </Slider.ToolTip>
                        </Slider>
                    </StackPanel>

                    <StackPanel x:Name="uiForNoAnimation" Grid.Row="1" Margin="30,20,30,5" Visibility="Collapsed" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Finish time:  "  />
                            <TextBox x:Name="finishTimeTB" Width="50" Text="1" />
                        </StackPanel>
                        <ProgressBar x:Name="simulationProgress" Height="20" Margin="0,5,0,0" Minimum="0" Value="0"></ProgressBar>
                    </StackPanel>

                    <Border Grid.Column="0" Margin="5,0,0,10" Grid.Row="2" Width="140" Style="{StaticResource upperWhiteBorder}" />

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,3,10,14" HorizontalAlignment="Center">
                        <Button x:Name="playBtn" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                            <Button.ToolTip>
                                <ToolTip Content="Run" />
                            </Button.ToolTip>
                            <Image Source="/Resources;component/Content/Images/Play.png"></Image>
                        </Button>
                        <Button x:Name="stopBtn" Margin="5,0,5,0" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                            <Button.ToolTip>
                                <ToolTip Content="Stop" />
                            </Button.ToolTip>
                            <Image Source="/Resources;component/Content/Images/Stop.png"></Image>
                        </Button>
                        <Button x:Name="serverBtn" Click="toolBarButtons_Click" Style="{StaticResource DefaultButtonStyle}">
                            <Button.ToolTip>
                                <ToolTip Content="Configure server" />
                            </Button.ToolTip>
                            <Image Source="/Resources;component/Content/Images/Step.png"></Image>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>

            <Grid x:Name="searchingPanel" Grid.Column="0" VerticalAlignment="Bottom" Height="42" Visibility="Hidden">
                <Border Grid.Column="0" Margin="10,0,0,2" Style="{StaticResource lowerTransparentBorder}"  />
                <Border Grid.Column="0" Margin="10,0,0,2" Style="{StaticResource lowerSemiTransparentBorder}"  />
                <StackPanel Grid.Column="0" VerticalAlignment="Top" Height="30" Orientation="Horizontal" Margin="20,7,5,0" >
                    <TextBlock Text="Object name:" Margin="5,5,20,0" />
                    <TextBox x:Name="searchedNameTB" Width="200" Height="23" PreviewTextInput="options_TextInput" />
                </StackPanel>
            </Grid>

            <Button x:Name="objOptionsBtn" Grid.Column="4" Margin="5.6,5,-81,381" Height="21" VerticalAlignment="Top"
