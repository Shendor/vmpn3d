                        </Expander>
                        <!-- ******************* Move options *****************************-->
                        <Expander x:Name="moveOptions" Header="Position" Padding="2" Visibility="Collapsed" Background="White" Margin="5,1,5,5" BorderBrush="Black" BorderThickness="1">
