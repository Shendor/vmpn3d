                            </Grid>
                        </Expander>
                        <!-- ******************* Rotate options *****************************-->
                        <Expander x:Name="rotateOptions" Header="Rotation" Visibility="Collapsed" Padding="2" Background="White" Margin="5,1,5,5" BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"></ColumnDefinition>
                                    <ColumnDefinition Width="110"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

