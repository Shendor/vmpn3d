                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"></ColumnDefinition>
                                    <ColumnDefinition Width="110"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="  Name" Margin="0,8,0,0" />
                                    <TextBlock Text="  Group" Margin="0,11,0,0" />
                                    <TextBlock x:Name="levelLabel" Text="  Level" Margin="0,11,0,0"  />
                                    <TextBlock x:Name="tokensLabel" Text="  Tokens" Margin="0,11,0,0"  />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,0,0,5">
                                    <TextBox x:Name="locationNameTB" VerticalAlignment="Top" Grid.Column="1" Margin="5,5,5,0" PreviewTextInput="options_TextInput" />
                                    <TextBox x:Name="locationGroupTB" VerticalAlignment="Top" Grid.Column="1" Margin="5,5,5,0" PreviewTextInput="options_TextInput" />
