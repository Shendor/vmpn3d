                    <!--*************************************************************************-->

                    <Border Grid.Row="7" Grid.ColumnSpan="3"  Style="{StaticResource rightTransparentBorder}" />
                    <TextBlock Grid.Row="7" Grid.ColumnSpan="3" Text="Far plane distance" Margin="30,5,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="camFPDTB" Grid.Row="7" Grid.Column="1" Margin="3,28.074,3,0" Text="0" VerticalAlignment="Top"  />
