                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="  Name" Margin="0,8,0,0" />
                                    <TextBlock Text="  Group"  Margin="0,11,0,0" />
                                    <TextBlock x:Name="delayLabel" Text="  Delay" Margin="0,11,0,0" />
                                    <TextBlock x:Name="expectLabel" Text="  Expectance" Margin="0,11,0,0" />
                                    <TextBlock x:Name="guardLabel" Text="  Guard" Margin="0,11,0,0" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,0,0,5">
                                    <TextBox x:Name="transitionNameTB" Grid.Column="1" Margin="5,5,5,0" PreviewTextInput="options_TextInput" />
                                    <TextBox x:Name="transitionGroupTB" VerticalAlignment="Top" Grid.Column="1" Margin="5,5,5,0" PreviewTextInput="options_TextInput" />
