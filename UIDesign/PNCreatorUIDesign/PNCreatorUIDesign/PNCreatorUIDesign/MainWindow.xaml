                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="85"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Save history" Margin="7,5,7,3" />
                                    <TextBlock Text="Transparent" Margin="7,5,7,5" />
                                    <TextBlock Text="Color" Margin="7,10,7,5" />
                                    <TextBlock Text="Form" Margin="7,12,5,0"/>
                                    <TextBlock Text="Description" Margin="7,12,5,0"/>
